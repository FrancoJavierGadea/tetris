---
import "../css/pieces-color.css";
import music from "@assets/tetris.mp3";
---




<tetris-svg 
    cell-attr="inkscape\\:label" 
    cell-pattern="C-{row}-{column}"
    board-class="Board"
    saved-piece-class="Saved-piece"
>

    <slot></slot>

    <audio src={music} loop style="display: none"></audio>

</tetris-svg>


<script>

    import { TetrisSVG } from "@tetris/components/tetris-svg.js";

    customElements.define('tetris-svg', TetrisSVG);
</script>


<style>

    tetris-svg {
        display: block;
        overflow: hidden;
        max-width: 100vw;
        max-height: 100vh;
        margin: 0;
        padding: 0;
    }
    tetris-svg :global(svg) {

        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        position: relative;
    }
</style>