---
import "../css/pieces-color.css";
---




<tetris-svg match-cell-attr="inkscape\\:label" match-cell-pattern="C-{row}-{column}">

    <slot></slot>

</tetris-svg>


<script>

    import { TetrisSVG } from "../web-components/tetris/tetris-svg.js";

    customElements.define('tetris-svg', TetrisSVG);
</script>


<style>

    tetris-svg {
        display: block;
        overflow: hidden;
        max-width: 100vw;
        max-height: 100vh;
        margin: 0;
        padding: 0;
    }
    tetris-svg :global(svg) {

        width: 100%;
        height: 100%;
        margin: 0;
        padding: 0;
        position: relative;
    }
</style>