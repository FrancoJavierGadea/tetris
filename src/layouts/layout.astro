---

const {title} = Astro.props;
---

<html lang="es" theme="dark">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	
		<slot />


		<div class="Tetris-theme-source">
			<p>
				Best piano Tetris theme cover 
				<a href="https://www.youtube.com/watch?v=q8rcTvAoRzk" target="_blank">here</a> 
				!
			</p>
		</div>

	</body>
</html>


<style is:global>
    * {
        margin: 0;
		padding: 0;
    }
	body {
		background-color: black;
	}

	.Tetris-theme-source {
		width: fit-content;
		color: #fff;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		letter-spacing: 1px;
		font-size: 18px;

		position: fixed;
		bottom: 10px;
		left: 0;
		right: 0;
		margin: auto;
	}
</style>